<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>
    <modules>
        <module>openapitools</module>
        <module>backend</module>
    </modules>
    <groupId>jp.yo41sawada</groupId>
    <artifactId>sample-openapi-maven</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>sample-openapi-maven</name>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>11</java.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.openapitools</groupId>
                <artifactId>openapi-generator-maven-plugin</artifactId>
                <version>5.4.0</version>
                <inherited>false</inherited>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <generatorName>spring</generatorName>
                            <inputSpec>${project.basedir}/openapi.yaml</inputSpec>
                            <output>${project.basedir}/openapitools</output>
                            <apiPackage>jp.yo41sawada.backend.api</apiPackage>
                            <modelPackage>jp.yo41sawada.backend.api.model</modelPackage>
                            <invokerPackage>jp.yo41sawada.backend</invokerPackage>
                            <configOptions>
                                <useTags>true</useTags>
                                <configPackage>jp.yo41sawada.backend.config</configPackage>
                                <sourceFolder>src/main/java</sourceFolder>
                                <delegatePattern>true</delegatePattern>
                                <version>0.0.1-SNAPSHOT</version>
                            </configOptions>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>